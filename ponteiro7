package main

import "fmt"

type Conta struct {
	Saldo   float64
	Titular string
}

func adicionarSaldo(c *Conta, valor float64) {
	c.Saldo += valor
}

func main() {
	conta := Conta{
		Saldo:   100.0,
		Titular: "Jo√£o",
	}

	adicionarSaldo(&conta, 50.0)

	fmt.Printf("Saldo da conta de %s: %.2f\n", conta.Titular, conta.Saldo)
}
